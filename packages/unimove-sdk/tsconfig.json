{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "strict": true,
    "declaration": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2020"],
    "allowJs": false,
    "verbatimModuleSyntax": true,
  },
  "include": ["src"]
}
